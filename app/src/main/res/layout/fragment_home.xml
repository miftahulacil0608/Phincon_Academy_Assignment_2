<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F3F3F3">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:menu="@menu/menu_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingEnd="10dp"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:src="@drawable/ic_mini_app" />
            </com.google.android.material.appbar.MaterialToolbar>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardview_mood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_say_hello_user"
                    style="@style/TextStyle.SmallHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:letterSpacing="0.01"
                    android:text="Hello, Azisz"
                    android:textColor="#5F5F5F"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_mood_user"
                    style="@style/TextStyle.Title.Large"
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="53dp"
                    android:layout_marginTop="10dp"
                    android:text="How are you doing today?"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_say_hello_user" />


                <com.google.android.material.button.MaterialButton

                    android:id="@+id/btn_sad"
                    android:layout_width="48dp"
                    android:layout_height="68dp"
                    android:layout_marginHorizontal="2.5dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="53dp"
                    android:background="@drawable/bg_custom_sad"
                    android:padding="0dp"
                    app:backgroundTint="@null"
                    app:icon="@drawable/ic_sad"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="35dp"
                    app:iconTint="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btn_angry"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_mood_user" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_angry"
                    android:layout_width="48dp"
                    android:layout_height="68dp"
                    android:layout_marginHorizontal="2.5dp"
                    android:background="@drawable/bg_custom_angry"
                    android:padding="0dp"
                    app:backgroundTint="@null"
                    app:icon="@drawable/ic_angry"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="35dp"
                    app:iconTint="@color/black"
                    app:layout_constraintBottom_toBottomOf="@id/btn_sad"
                    app:layout_constraintEnd_toStartOf="@id/btn_netral"
                    app:layout_constraintStart_toEndOf="@id/btn_sad"
                    app:layout_constraintTop_toTopOf="@id/btn_sad" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_netral"
                    android:layout_width="48dp"
                    android:layout_height="68dp"
                    android:layout_marginHorizontal="2.5dp"
                    android:background="@drawable/bg_custom_netral"
                    android:padding="0dp"
                    app:backgroundTint="@null"
                    app:icon="@drawable/ic_netral"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="35dp"
                    app:iconTint="@color/black"
                    app:layout_constraintBottom_toBottomOf="@id/btn_sad"
                    app:layout_constraintEnd_toStartOf="@id/btn_happy"
                    app:layout_constraintStart_toEndOf="@id/btn_angry"
                    app:layout_constraintTop_toTopOf="@id/btn_sad" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_happy"
                    android:layout_width="48dp"
                    android:layout_height="68dp"
                    android:layout_marginHorizontal="2.5dp"
                    android:background="@drawable/bg_custom_happy"
                    android:padding="0dp"
                    app:backgroundTint="@null"
                    app:icon="@drawable/ic_happy"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="35dp"
                    app:iconTint="@color/black"
                    app:layout_constraintBottom_toBottomOf="@id/btn_sad"
                    app:layout_constraintEnd_toStartOf="@id/btn_smile"
                    app:layout_constraintStart_toEndOf="@id/btn_netral"
                    app:layout_constraintTop_toTopOf="@id/btn_sad" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_smile"
                    android:layout_width="48dp"
                    android:layout_height="68dp"
                    android:layout_marginHorizontal="2.5dp"
                    android:background="@drawable/bg_custom_smile"
                    android:padding="0dp"
                    app:backgroundTint="@null"
                    app:icon="@drawable/ic_smile"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="35dp"
                    app:iconTint="@color/black"
                    app:layout_constraintBottom_toBottomOf="@id/btn_sad"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn_happy"
                    app:layout_constraintTop_toTopOf="@id/btn_sad" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_recently_add"
            style="@style/TextStyle.SmallHeading"
            android:layout_marginTop="20dp"
            android:text="@string/label_recently_added"
            android:textColor="#5F5F5F"
            app:layout_constraintStart_toStartOf="@id/cardview_mood"
            app:layout_constraintTop_toBottomOf="@id/cardview_mood" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_view_all"
            style="@style/TextStyle.Title.Small"
            android:clickable="true"
            android:text="@string/label_view_all"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_recently_add"
            app:layout_constraintEnd_toEndOf="@id/cardview_mood"
            app:layout_constraintTop_toTopOf="@+id/tv_recently_add" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardview_diary"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tv_recently_add">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="30dp"
                android:paddingTop="24dp"
                android:paddingEnd="24dp"
                android:paddingBottom="34dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/mood_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_happy"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/menu"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:src="@drawable/ic_menu"
                    android:background="@null"
                    app:layout_constraintBottom_toBottomOf="@id/mood_user"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/mood_user" />

                <LinearLayout
                    android:id="@+id/layout_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_custom_date"
                    android:backgroundTint="#00FFFF"
                    android:orientation="horizontal"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mood_user">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_clock"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/ic_clcok" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_date"
                        style="@style/TextStyle.Title.Small"
                        android:fontFamily="@font/manrope_regular"
                        android:text="15 October 2024" />
                </LinearLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/title_item_diary"
                    style="@style/TextStyle.Title.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/label_title_item_diary"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@id/layout_date" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/description_item_diary"
                    style="@style/TextStyle.SmallHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@string/label_description_item_diary"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title_item_diary"
                    tools:layout_editor_absoluteX="30dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>

